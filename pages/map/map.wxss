.page {
  height: 100%;
}

.home {
  position: absolute;
  height: 100%;
  width: 100%;
}

.mapStyle {
  margin: 20rpx auto 30rpx;
  border: 2rpx solid #ccc;
}

.switchMapStyle {
  position: absolute;
  top: 40rpx;
  right: 5%;
  height: 60rpx;
  width: 60rpx;
  border: 10rpx solid;
  border-radius: 50%;
  /* background-color: rgb(241, 236, 236); */
  box-sizing: border-box;
}

view {
  color: rgb(17, 44, 31);
}

.searchForm {
  height: 70rpx;
  width: 95%;
  margin: 30rpx auto;
  box-sizing: border-box;
  border: 1px solid #aaa;
  display: block;
  border-radius: 10rpx;
  position: relative;
}

.searchInput {
  width: 68%;
  height: 100%;
  padding: 8rpx;
  box-sizing: border-box;
  float: left;  
}

.searchIcon {
  margin: 20rpx;
  float: left;  
}

