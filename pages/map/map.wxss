.userselect {
  height: 80rpx;
  width: 95%;
  margin: 30rpx auto;
  overflow: hidden;
}

.regetposition,
.chooseposition {
  width: 45%;
  background-color: green;
  border-radius: 16rpx;
  display: inline-block;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
  font-weight: 600;
}

.regetposition {
  float: left;
}

.chooseposition {
  float: right;
}

span {
  color: rgb(4, 245, 153);
}

.maskLayer {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #888;
  opacity: 0.3;
  z-index: 10;
}

.choose {
  position: fixed;
  height: 35%;
  width: 100%;
  bottom: 0;
  right: 0;
  z-index: 12;
  background-color: white;
  border-radius: 26rpx 26rpx 0 0;
  padding: 10rpx 16rpx;
  overflow: scroll;
  box-sizing: border-box;
}

.item {
  margin: 16rpx;
  display: flex;
  height: 70rpx;
  border-bottom: 2rpx solid #ccc;
}

.itemName {
  width: 15%;
  flex-grow: 1
}

.itemDetail {
  width: 80%;
  flex-grow: 1;
  font-size: 36rpx;
  overflow: scroll;
}

cover-view button {
  width: 90%;
  margin: 5rpx auto 0;
  border-radius: 16rpx;
  height: 80rpx;
  background-color: rgb(52, 129, 231);
  line-height: 80rpx;
}