/* pages/evaluate/evaluate.wxss */

page {
  background-color: #ededed;
  padding-top: 30rpx;
}

form {
  width: 100%;
  height: 600px;
}

textarea {
  background-color: white;
  width: 85%;
  height: 260rpx;
  margin: 0 auto; 
  padding: 16rpx;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 18rpx;
}

textarea:focus {
  background-color: red;
}

.center {
  line-height: 300px;
}

.newcommentbutton {
  background: rgb(57, 170, 57) linear-gradient(hsla(0, 0%, 100%, .2), transparent);
  width: 75%;
  height: 35px;
  border-radius: 8px;
  margin-top: 30rpx;
  line-height: 35px;
}

.allComment {
  width: 90%;
  margin: 50rpx auto;
  background-color: white;
  overflow: hidden;
  border-radius: 18rpx;
}

/* .all {

  overflow: hidden;
} */

.list {
  padding: 12rpx;
  width: 90%;
  margin: 32rpx auto;
  word-wrap: break-word;
  box-shadow: 2rpx 2rpx 16rpx 2rpx rgb(184, 185, 184);
  background: rgba(35, 255, 108, 0.4) linear-gradient(hsla(0, 0%, 100%, .3), transparent);
  transition: all 0.3s;
  position: relative;
}

.time {
  position: relative;
  margin-top: 30rpx;
  color: #888;
  font-size: 24rpx;
  left: 369rpx;
}

.options {
  /* display: none; */
  /* background-color: rgba(51, 51, 51, 0.7); */
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

.list_rightButton,
.list_leftButton {
  height: 100%;
  width: 30%;
  background-color: rgba(250, 0, 0, 0.644);
  text-align: center;
  font-weight: bold;
}

.list_leftButton {
  float: left;
  margin-left: 30rpx;
}

.list_rightButton {
  margin-right: 30rpx;
  float: right;
}

.more {
  font-size: 28rpx;
  color: #300;
  font-weight: bold;
  background: #58a linear-gradient(hsla(0, 0%, 100%, .2), transparent);
  margin: 10rpx 12rpx;
}

.commentOption {
  position: fixed;
  background-color: #000;
  opacity: 0.3;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 9998;
}

.commentOptionForm {
  position: fixed;
  width: 90%;
  height: 50%;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  background-color: #dedede;
  opacity: 1;
  overflow: hidden;
  z-index: 9999;
}

.commentDetail {
  height: 65%;
  width: 90%;
  margin: 2% auto;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.commentButton {
  width: 80%;
  height: 30%;
  margin: 0 auto;
}

.right,
.left {
  width: 215rpx;
  height: 70%;
  font-size: 42rpx;
  margin-top: 30rpx;
}

.right {
  float: right;
  background-color: rgb(250, 250, 250);
}

.left {
  float: left;
  background-color: rgb(19, 185, 4)
}

.right:hover,
.left:hover {
  background-color: rgb(0, 0, 0);
  color: white;
}