/* pages/evaluate/evaluate.wxss */

page {
  background-color: #ededed;
}

form {
  width: 100%;
  height: 600px;
}

textarea {
  background-color: white;
  width: 85%;
  height: 260rpx;
  margin: 30rpx auto 0; 
  padding: 16rpx;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 18rpx;
}

textarea:focus {
  background-color: red;
}

.center {
  line-height: 300px;
}

button {
  background-color: green;
  width: 75%;
  height: 35px;
  border-radius: 8px;
  margin-top: 30rpx;
  line-height: 35px;
}

.allComment {
  width: 90%;
  margin: 50rpx auto;
  background-color: white;
  overflow: hidden;
}

.list {
  padding: 12rpx;
  width: 90%;
  border: 1.5px solid #eee;
  margin: 12rpx auto;
  word-wrap: break-word;
  border-radius: 16rpx;
}

.time {
  position: relative;
  left: 365rpx;
  margin-top: 30rpx;
  color: #888;
  font-size: 24rpx;
}