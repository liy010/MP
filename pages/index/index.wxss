/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.user-motto {
  color: rgba(53, 27, 128, 0.6);
}

.hover_log:hover {
    color: red;
    background-color: #ccc;
}

.other {
  margin-top: -200rpx;
}

button {
  display: block;
  margin: 20rpx auto;
  height: 35px;
  width: 200px;
  background: rgb(162, 252, 27) linear-gradient(hsla(0, 0%, 100%, .3), transparent);
  border-radius: 8px;
  line-height: 35px;
  box-shadow: 3px 3px 18px rgba(162, 252, 27, 0.8);
}