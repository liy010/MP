/* pages/books/books.wxss */

.option {
  margin: 30rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 12rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.item {
  background-color: #CA7F76;
  padding: 12rpx;
  margin: 12rpx;
  flex-grow: 1;
  text-align: center;
  border-radius: 16rpx;
  
}

.allbook {
  width:680rpx;
  margin: 40rpx auto;
  background-color: #efefef;
  padding: 10rpx;
  overflow: hidden;
}

.itembook {
  height: 400rpx;
  width: 300rpx;
  margin: 18rpx;
  border: 1px solid #aaa;
  background-color: #ccc;
  float: right;
  position: relative;
}

.bookimg {
  height: 400rpx;
  width: 300rpx;
  background-clip: blue;
}

.discription {
  position: absolute;
  height: 80rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background-color: white;
  opacity: 0.7;
  overflow: hidden;
  padding-bottom: 6rpx;
}

h5 {
  font-size: 28rpx;
  margin-left: 6rpx;
  display: block;
}

text {
  font-size: 24rpx;
  margin-left: 6rpx;
}

.p {
  position: fixed;
  background-color: #777;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

.detail {
  width: 90%;
  margin: 100rpx auto;
  background-color: #fff;
}

.summary {
  height: 700rpx;
  overflow: scroll;
  text-indent: 2em;
}