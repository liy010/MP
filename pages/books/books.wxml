<view class='allbook'>
  <block wx:for="{{bookList}}" wx:key="{{index}}">
    <view class='itembook' data-itembook="{{item}}" bindtap='itembookTap'>
      <image mode="aspectFill" class="bookimg" src='{{item.img}}'></image>
      <view class='discription'>
          <h5>{{item.title}}</h5>
          <text class="redding">{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>

<view class='p' hidden='{{detailhidden}}'>
  <view class='detail'>
  <text>{{itembook.title}}</text>
  <text>类别： {{itembook.catalog}}</text>
  <view>
  <h5>简介： </h5>
  <text class='summary'>{{itembook.sub2}}</text>
  </view>
  <view wx:for="{{itembook.online}}" wx:key="{{index}}">
  <text>{{item.webname}}</text>
  <text>点击进入网站购买</text>
  </view>
  </view>
</view>